<h1>Applications</h1>

<div class="row">
    <div class="col-md-8">
        <%= link_to "Add Application", new_registered_application_path, class: 'btn btn-success' %>
    </div>
    <div class="col-md-8">
        <% @registered_applications.each do |application| %>
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= link_to application.name, application %>
                    </h4>
                </div>
            </div>
        <% end %>
    </div>
</div>